@model Shipping.ViewModels.Account.UserSeachViewModel
@{var slNo = 1;}


                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-condensed">
                        <tbody>
                            <tr>
                                <th class="">SlNo.</th>
                                <th class="">User Name</th>
                                <th class="">User Email</th>
                                <th class="">User Role</th>
                                <th class="">Status</th>
                                <th class="">Last Login</th>

                                <th class=""><a href="~/Registration/NewUser/0" class="btn btn-primary btn-sm pull-right">Create User</a></th>
                            </tr>
                            @if (Model.lstUser.Count() > 0)
                            {
                                foreach (var m in Model.lstUser)
                                {
                                    <tr>
                                        <td class="text-left">@slNo</td>
                                        <td class="">@m.UserName</td>
                                        <th class="">@m.UserEmailAddress</th>
                                        <td class="">
                                            @if (m.RoleId == 1)
                                            {<span class="label label-success">Administrator</span> }
                                            else if (m.RoleId == 2)
                                            { <span class="label label-primary">Employee</span>}
                                        </td>
                                        <td class="">
                                            @if (m.Flag == "A")
                                            {<span class="label label-success">Active</span> }
                                            else
                                            { <span class="label label-danger">De-Active</span>}

                                        </td>
                                        <td class="">@m.LastLogin</td>
                                        <td class="text-right">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-success br2 btn-xs fs12 dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                    Active
                                                    <span class="caret ml5"></span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li>
                                                        <a href="~/UserManagement/UserCreation/NewUser/@m.UserId">Edit</a>
                                                    </li>
                                                    @if (m.Flag == "A")
                                                    {
                                                        <li>
                                                            <a href=@Url.Action("AccountFlag", "UserCreation", new { @id = m.UserId ,flag="D"}) onclick="return confirm('Are you sure you want to De-Activate the Account?')">De-Active</a>
                                                        </li>
                                                    }
                                                    else if (m.Flag == "D")
                                                    {
                                                        <li>
                                                            <a href=@Url.Action("AccountFlag", "UserCreation", new { @id = m.UserId, flag = "A" }) onclick="return confirm('Are you sure you want to Activate the Account?')">Active</a>
                                                        </li>
                                                    }
                                                    <li>
                                                        <a href=@Url.Action("NewUser", "UserCreation", new { @id = m.UserId })>Reset Password</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    slNo++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8">
                                        No Records found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="row box-body">
                    <div class="col-md-1">
                        <label class="field select">
                            <select id="ddlPageSize" onchange="LoadUserDetail(0)" name="filter-status" class="form-control">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="70">75</option>
                                <option value="100">100</option>
                            </select>
                            <i class="arrow double"></i>
                        </label>
                    </div>
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-6 text-right">
                        @if (Model.Pager.EndPage > 1)
                        {
                            <ul class="pagination pagination-sm no-margin pull-right" style="margin:0px 0px;cursor: pointer;">
                                @if (Model.Pager.CurrentPage > 1)
                                {
                                    <li>
                                        <a onclick="LoadUserDetail(0)">First</a>
                                    </li>
                                    <li>
                                        <a onclick="LoadUserDetail(@(Model.Pager.CurrentPage - 1))">Previous</a>
                                    </li>
                                }

                                @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                {
                                    <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                                        <a onclick="LoadUserDetail(@page);">@page</a>
                                    </li>
                                }

                                @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                {
                                    <li>
                                        <a onclick="LoadUserDetail(@Model.Pager.CurrentPage + 1)">Next</a>
                                    </li>
                                    <li>
                                        <a onclick="LoadUserDetail(@Model.Pager.TotalPages)">Last</a>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>

