@model Shipping.ViewModels.Account.IndexEmailModel
@{var slNo = 1;}
<section class="content">
	<!-- Default box -->
	<div class="box">
		<div class="box-header with-border">
			<h3 class="box-title">Index</h3>

			<div class="box-tools pull-right">
				<button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
						title="Collapse">
					<i class="fa fa-minus"></i>
				</button>
				<button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
					<i class="fa fa-times"></i>
				</button>
			</div>
		</div>

		<section id="content">
			<div class="row box-body">
				<div class="col-md-3">
					<a href="~/Email/Send" class="btn btn-primary  margin-bottom">Compose</a>
					<button type="button" class="btn btn-primary  margin-bottom" id="AddEmail">
						Add Email
					</button>

					<div class="box box-solid">
						<div class="box-header with-border  bg-primary" style="color:ghostwhite">
							<h3 class="box-title">Folders</h3>

							<div class="box-tools ">
								<button type="button" class="btn btn-box-tool" data-widget="collapse">
									<i class="fa fa-minus"></i>
								</button>
							</div>
						</div>
						<div class="box-body no-padding">
							<ul class="nav nav-pills nav-stacked">
								<li class="active">
									<a href="#">
										<i class="fa fa-inbox"></i> Sent
										<span class="label label-primary pull-right">12</span>
									</a>
								</li>
							</ul>
						</div>
						<!-- /.box-body -->
					</div>
					<!-- /. box -->
					<div class="box box-solid">
						<div class="box-header with-border bg-primary" style="color:ghostwhite">
							<h3 class="box-title">My Email ID'S</h3>

							<div class="box-tools bg-primary">
								<button type="button" class="btn btn-box-tool" data-widget="collapse">
									<i class="fa fa-minus"></i>
								</button>
							</div>
						</div>
						<div class="box-body no-padding">
							@foreach (var mailId in Model.lstEmails)
							{
								<div class="checkbox">
									<label>
										<input type="checkbox">
										@mailId.Email
									</label>
								</div>
							}
						</div>

						<!-- /.box-body -->
					</div>
					<!-- /.box -->
				</div>
				<div class="col-md-9">
					<div class="nav-tabs-custom">
						<ul class="nav nav-tabs">
							<li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true">My Inbox</a></li>
							<li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false">My Mail ID's</a></li>
							<li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-gear"></i></a></li>
						</ul>
						<div class="tab-content">
							<div class="tab-pane active" id="tab_1">
								<!-- /.col -->

								<div class="box box-primary">
									<div class="box-header with-border">
										<h3 class="box-title">Sent Mails</h3>
									</div>
									<!-- /.box-header -->
									<div class="box-body no-padding">
										<div id="dvEmailSntList">
											@Html.Partial("_EmailList", Model)
										</div>
										<!-- /.mail-box-messages -->
									</div>
									<!-- /.box-body -->

								</div>
								<!-- /. box -->
							</div>
							<div class="tab-pane" id="tab_2">

								<!-- /.box-header -->
								<div class="box-body no-padding">
									<table class="table">
										<tbody>
											<tr>
												<th class="">SlNo.</th>
												<th class="">Email Address</th>
												<th class="">Password</th>
												<th class="">Status</th>
												@*  <th class=""><a href="~/Email/AddEmail" class="btn btn-primary btn-sm pull-right">Add Email</a></th>*@
											</tr>
											@if (Model.lstEmails.Count() > 0)
											{
												foreach (var m in Model.lstEmails)
												{
													<tr>
														<td class="text-left">@slNo</td>
														<td class="">@m.Email</td>
														<th class="">@m.Password</th>
														<td class="">
															@if ("A" == "A")
															{<span class="badge badge-success">Active</span> }
															else
															{ <span class="badge badge-danger">De-Active</span>}

														</td>
													</tr>
													slNo++;
												}
											}
											else
											{
												<tr>
													<td colspan="8">
														No Records found.
													</td>
												</tr>
											}
										</tbody>
									</table>

								</div>
								<!-- /.box-body -->

							</div>
							<!-- /.col -->
						</div>
					</div>
				</div>
			</div>
			<!-- /.row -->
			<div id="NewEmail"></div>
			<!-- /.modal -->

		</section>
		<div class="box-footer">
			surycourier  private limited
		</div>
		<!-- /.box-footer-->
	</div>
	<!-- /.box -->
</section>


