@model Shipping.ViewModels.Roles.RolesSearchViewModel

@{var slNo = 1;}


<!-- /.box-header -->
<div class="box-body">
    <table class="table table-condensed">
        <tbody>
            <tr>
                <th class="">SlNo.</th>
                <th class="">Role Name</th>
                <th class="">Role Discription</th>
                <th class=""><button class="btn btn-primary btn-sm pull-right" id="AddRole">Create Role</button></th>
            </tr>
            @if (Model.LstRoles.Count() > 0)
            {
                foreach (var m in Model.LstRoles)
                {
                    <tr>
                        <td class="text-left">@slNo</td>
                        <td class="">@m.RoleName</td>
                        <th class="">@m.RoleDescription</th>
                        <td class="text-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success br2 btn-xs fs12 dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Active
                                    <span class="caret ml5"></span>
                                </button>
                            </div>
                        </td>
                    </tr>
                    slNo++;
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Records found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.box-body -->
<div class="row box-body">
    <div class="col-md-1">
        <label class="field select">
            <select id="ddlPageSize" onchange="LoadRolesDetail(0)" name="filter-status" class="form-control">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="70">75</option>
                <option value="100">100</option>
            </select>
            <i class="arrow double"></i>
        </label>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-6 text-right">
        @if (Model.Pager.EndPage > 1)
        {
            <ul class="pagination pagination-sm no-margin pull-right" style="margin:0px 0px;cursor: pointer;">
                @if (Model.Pager.CurrentPage > 1)
                {
                    <li>
                        <a onclick="LoadRolesDetail(0)">First</a>
                    </li>
                    <li>
                        <a onclick="LoadRolesDetail(@(Model.Pager.CurrentPage - 1))">Previous</a>
                    </li>
                }

                @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                {
                    <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                        <a onclick="LoadRolesDetail(@page);">@page</a>
                    </li>
                }

                @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                {
                    <li>
                        <a onclick="LoadRolesDetail(@Model.Pager.CurrentPage + 1)">Next</a>
                    </li>
                    <li>
                        <a onclick="LoadRolesDetail(@Model.Pager.TotalPages)">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>


